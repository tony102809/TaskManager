<table>
  <tr>
    <th>Pinned</th>
    <th>Progress</th>
    <th>Title</th>
    <th>
      Due Date
      <a href="/?sort-by=due-date&sort-order=asc">⬆️</a>
      <a href="/?sort-by=due-date&sort-order=desc">⬇️</a>
    </th>
    <th>
      Priority
      <a href="/?sort-by=priority&sort-order=asc">⬆️</a>
      <a href="/?sort-by=priority&sort-order=desc">⬇️</a>
    </th>
    <th>Tags</th>
  </tr>
  <tbody>
    {{#each tasks}}
    <tr>
      <td>{{#if pinned}}📌{{/if}}</td>
      <td>{{progress}}</td>
      <td>{{title}}</td>
      <td>{{due-date}}</td>
      <td>{{priority}}</td>
      <td>
        {{#each tags}}
        <span class="tag">{{this}}</span>
        {{/each}}
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
